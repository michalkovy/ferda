<?xml version="1.0"?>
<project name="PropertyBag test" default="build" basedir="." xmlns="http://nant.sf.net/release/0.85-rc1/nant.xsd">
	<description>
		Test project for the propertyBag class - this class will be
		used by the FrontEnd for displaying properties
	</description>
	
	<property name="debug" value="false" unless="${property::exists('debug')}"/>
	<property name="build.dir" value="bin" unless="${property::exists('build.dir')}"/>
	
	<target name="build" description="Builds the PropertyBag project">
		<csc target="exe" output="${path::combine(build.dir,'propertybag.exe')}" debug="${debug}" >
			<sources>
				<include name="PropertyBag.cs"/>
				<include name="PropBagTestForm.cs"/>
				<include name="AssemblyInfo.cs" />
			</sources>
			<references>
				<include name="System.dll" />
				<include name="System.Data.dll" />
				<include name="System.Drawing.dll" />
				<include name="System.Windows.Forms.dll" />
				<include name="System.XML.dll" />
				<include name="System.Reflection.dll" />
				<include name="System.Runtime.CompilerServices.dll" />
			</references>
			<resources>
				<include name="Image.bmp" />
			</resources>
		</csc>
	</target>

	<target name="clean">
		<delete failonerror="false">
			<fileset basedir="${build.dir}">
				<include name="propertybag.exe"/>
			</fileset>
		</delete>
	</target> 
	
</project>